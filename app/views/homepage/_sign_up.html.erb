<div class="modal fade" id="sign-up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="regular">Team<span class="script">Gathering</span></h2>
        <h3>Sign Up</h3>
      </div>
      <div class="modal-body">

        <!-- new user form -->
        <%= form_tag signin_path do %>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email], :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, params[:password] ,:class => "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Sign Up", class:"btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>